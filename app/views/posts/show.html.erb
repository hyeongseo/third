<p id="notice"><%= notice %></p>
<h1> Post id : <%= @post.id %> </h1>


<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %>

<h2>Replies</h2>
<% @post.replies.each do |reply| %>
  <p>
    <strong>User : </strong>
    <%= reply.reply_user %>
  </p>
  <p>
    <strong>Reply : </strong>
    <%= reply.body %>
  </p>
  <%= link_to 'Delete', post_reply_path(reply.post, reply), method: :delete, data: {confirm: 'Are you sure?'}%>

<% end %>


<h2>Reply : </h2>
<%= form_for([@post, @post.replies.build]) do |f| %>
  <p>
    <%= f.label :reply_user %><br>
    <%= f.text_field :reply_user %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
